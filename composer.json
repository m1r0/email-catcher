{
	"name": "m1r0/email-catcher",
	"description": "A WordPress plugin that helps you catch all emails.",
	"type": "wordpress-plugin",
	"require": {
		"php": ">=5.6",
		"composer/installers": "~1.0"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7",
		"mockery/mockery": "^0.9",
		"phpcompatibility/phpcompatibility-wp": "*",
		"squizlabs/php_codesniffer": "3.*",
		"wp-coding-standards/wpcs": "^2.3",
		"yoast/phpunit-polyfills": "^0.2.0"
	},
    "config": {
        "platform": {
            "php": "5.6"
        },
        "sort-packages": true
    },
	"autoload": {
		"psr-4": {
			"m1r0\\EmailCatcher\\": "src/"
		}
	},
	"scripts": {
		"phpcs": "phpcs",
		"phpunit": "phpunit"
	}
}
